          <!-- mj-include path="./components/intro.mjml" -->
            <mj-section css-class="plr-15" padding="0 30px">
              <mj-column>
                <mj-text css-class="tplr-0 fs-18" mj-class="intro-title">
                  Send native iOS and Android notifications with our simple unified API.
                </mj-text>
                <mj-button css-class="primary-btn" mj-class="primary-btn" href="https://blog.ably.io/native-push-notifications-now-available-at-ably-af84180282af" width="280px">
